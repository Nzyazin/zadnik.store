article.guarantee
  .guarantee__cont.cont
    each item, index in guaranteeContent
      if (index === 0)
        h1.guarantee__caption.caption= item.title
        each elem in item.text
          p.guarantee__text.guarantee__text_big= elem
      else
        h2.guarantee__title.title= item.title
        each elem in item.text
          p.guarantee__text.text= elem
      if (item.list)
        ul.guarantee__list
          each elem in item.list
            li.guarantee__item.text= elem
        each elem in item.text1
          p.guarantee__text.text= elem
