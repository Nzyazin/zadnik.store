.auth
  .auth__cont.cont
    .auth__box
      h2.auth__title.title Вход в систему
    
    form.auth__form(action="/admin/login" method="POST")
      if error
        .auth__alert.text-big= error
      
      .auth__group
        label.auth__label.text-big Имя пользователя
        input.auth__input(type="text" placeholder="логин" name="username" required)
      
      .auth__group
        label.auth__label.text-big Пароль
        input.auth__input(type="password" placeholder="пароль" name="password" required)
      
      button.auth__button.button-orange.text(type="submit") Войти